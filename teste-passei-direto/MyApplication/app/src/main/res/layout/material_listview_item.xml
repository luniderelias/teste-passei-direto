<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materialCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contentNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/card_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subjectNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/card_subtitle" />

        <TextView
            android:id="@+id/universityNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/card_content" />

        <ImageView
            android:id="@+id/favoriteImageView"
            android:layout_width="@dimen/card_star_size"
            android:layout_height="@dimen/card_star_size"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/card_star_margin"
            android:layout_marginEnd="@dimen/card_star_margin"
            app:srcCompat="@drawable/ic_empty_star_material_design" />

    </LinearLayout>
</android.support.v7.widget.CardView>